<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.SurveyBoard">

	<select id="surveyListCount" resultType="int">
	select nvl(count(*),0) from SURVEY_BOARD
	</select>

	<select id="surveyList"  parameterType="hashmap" resultType="SurveyBoard">
	select sb_num, sb_title ,r_receiver, sb_regdate, sb_readcount 
	FROM SURVEY_BOARD sb, RECIPIENT re 
	WHERE sb.r_num = re.r_num AND sb.sb_num BETWEEN #{startRow} AND #{endRow}
	</select>
	
	<select id="insertSurvey_new" resultType="int">
		select nvl(max(sb_num),0) from survey_board
	</select>
	
	<insert id="insertSurvey" parameterType="SurveyInsert">
		insert into 
		survey_board values 
		(#{sb_num},#{r_num},#{e_num},sysdate,#{sb_title},#{sb_content},#{sb_passwd},0)
	</insert>
	
	<insert id="insertResult" parameterType="SurveyResultInsert">
		
	</insert>
</mapper>
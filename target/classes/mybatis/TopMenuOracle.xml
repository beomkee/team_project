<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" 
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="mybatis.TopMenu">

	<select id="getTopMenus" resultType="TopMenu">
		select * from top_menu where tm_use = 'y' order by tm_num, tm_div asc
	</select>
	
	<select id="topMenuList" resultType="TopMenu">
		select * from top_menu ORDER BY tm_div
	</select>
	
	<delete id="deleteTopMenu" parameterType="int">
		delete from top_menu where tm_num=#{tm_num}
	</delete>
</mapper>